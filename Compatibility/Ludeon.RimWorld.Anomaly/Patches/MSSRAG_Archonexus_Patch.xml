<?xml version="1.0" encoding="utf-8" ?>
<Patch>
<!-- Archocore -->
<Operation Class="PatchOperationAdd"> 
    <xpath>Defs/ThingDef[defName="ArchonexusCore"]/comps</xpath>
    <value>
        <li Class="CompProperties_Glower">
            <overlightRadius>7.0</overlightRadius>
            <glowRadius>26</glowRadius>
            <glowColor>(370,370,370,0)</glowColor>
        </li>
    </value>
</Operation>

<Operation Class="PatchOperationAdd"> 
    <xpath>Defs/ThingDef[defName="ArchonexusCore"]/comps</xpath>
    <value>
        <li Class="CompProperties_HeatPusher">
            <compClass>CompHeatPusherPowered</compClass>
            <heatPerSecond>3</heatPerSecond>
        </li>
    </value>
</Operation>

<Operation Class="PatchOperationAdd"> 
    <xpath>Defs/ThingDef[defName="ArchonexusCore"]</xpath>
    <value>
        <specialDisplayRadius>15</specialDisplayRadius>
    </value>
</Operation>

<Operation Class="PatchOperationRemove">
    <xpath>/Defs/ThingDef[defName="ArchonexusCore"]/comps/li[@Class = "CompProperties_MoteEmitter"]</xpath>
</Operation>

<Operation Class="PatchOperationRemove">
    <xpath>/Defs/ThingDef[defName="ArchonexusCore"]/comps/li[@Class = "CompProperties_PlantDamager"]</xpath>
</Operation>

<Operation Class="PatchOperationReplace"> 
    <xpath>Defs/ThingDef[defName="ArchonexusCore"]/label</xpath>
    <value>
        <label>Trunk of the World Tree</label>
    </value>
</Operation>

<Operation Class="PatchOperationReplace"> 
    <xpath>Defs/ThingDef[defName="ArchonexusCore"]/description</xpath>
    <value>
        <description>The withered remains of the world tree, reduced to a fraction of its former size thanks to the loss of the planet's sun. Though diminished, the world tree cannot die, and is the sole sustainer of life on this otherwise doomed planet.</description>
    </value>
</Operation>

<!-- Archotower -->

<Operation Class="PatchOperationAdd"> 
    <xpath>Defs/ThingDef[defName="ArchotechTower"]</xpath>
    <value>
        <comps>
        </comps>
    </value>
</Operation>

<Operation Class="PatchOperationAdd"> 
    <xpath>Defs/ThingDef[defName="ArchotechTower"]/comps</xpath>
    <value>
        <li Class="CompProperties_Glower">
            <overlightRadius>5.0</overlightRadius>
            <glowRadius>13</glowRadius>
            <glowColor>(370,370,370,0)</glowColor>
        </li>
    </value>
</Operation>

<Operation Class="PatchOperationAdd"> 
    <xpath>Defs/ThingDef[defName="ArchotechTower"]/comps</xpath>
    <value>
        <li Class="CompProperties_Schedule">
            <startTime>0.25</startTime>
            <endTime>0.8</endTime>
            <offMessage>Regathering energy...</offMessage>
        </li>
    </value>
</Operation>

<Operation Class="PatchOperationAdd"> 
    <xpath>Defs/ThingDef[defName="ArchotechTower"]/comps</xpath>
    <value>
        <li Class="CompProperties_HeatPusher">
            <compClass>CompHeatPusherPowered</compClass>
            <heatPerSecond>2</heatPerSecond>
        </li>
    </value>
</Operation>

<Operation Class="PatchOperationAdd"> 
    <xpath>Defs/ThingDef[defName="ArchotechTower"]</xpath>
    <value>
        <specialDisplayRadius>7</specialDisplayRadius>
    </value>
</Operation>

<Operation Class="PatchOperationReplace"> 
    <xpath>Defs/ThingDef[defName="ArchotechTower"]/label</xpath>
    <value>
        <label>World Tree Roots</label>
    </value>
</Operation>

<Operation Class="PatchOperationReplace"> 
    <xpath>Defs/ThingDef[defName="ArchotechTower"]/description</xpath>
    <value>
        <description>The ancient roots of the world tree. Once spanning the globe, these roots have receeded, but even in their weakened state the roots remain healthy, and would not persish from natural causes.</description>
    </value>
</Operation>

</Patch>